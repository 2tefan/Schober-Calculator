<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtOutput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="txtOutput"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button7"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/seven" />

            <Button
                android:id="@+id/button8"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/eight" />

            <Button
                android:id="@+id/button9"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/nine" />

            <Button
                android:id="@+id/buttonDivided"
                style="@style/myButtons"
                android:onClick="operators"
                android:text="@string/divided" />

            <Button
                android:id="@+id/buttonClear"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/clear" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button4"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/four" />

            <Button
                android:id="@+id/button5"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/five" />

            <Button
                android:id="@+id/button6"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/six" />

            <Button
                android:id="@+id/buttonMultiplied"
                style="@style/myButtons"
                android:onClick="operators"
                android:text="@string/multiplied" />

            <Button
                android:id="@+id/buttonDelete"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/delete" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/one" />

            <Button
                android:id="@+id/button2"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/two" />

            <Button
                android:id="@+id/button3"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/three" />

            <Button
                android:id="@+id/buttonMinus"
                style="@style/myButtons"
                android:onClick="operators"
                android:text="@string/minus" />

            <Button
                style="@style/myButtons"
                android:background="@drawable/btn_main_design" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/button0"
                style="@style/myButtons"
                android:layout_weight="2"
                android:onClick="button"
                android:text="@string/zero" />

            <Button
                android:id="@+id/buttonPoint"
                style="@style/myButtons"
                android:onClick="button"
                android:text="@string/point" />

            <Button
                android:id="@+id/buttonPlus"
                style="@style/myButtons"
                android:onClick="operators"
                android:text="@string/plus" />

            <Button
                style="@style/myButtons"
                android:onClick="btnEquals"
                android:text="@string/equals" />
        </TableRow>

    </TableLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>